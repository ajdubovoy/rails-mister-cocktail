<h1 class="text-center">New Review for <%= @cocktail.name %></h1>
<div class="container">
<%= simple_form_for [@cocktail, @review] do |f| %>
  <%= f.input :rating, as: :select, collection: (1..5) %>
  <%= f.input :content, as: :text %>
  <%= f.button :submit %>
  <%= link_to "Cancel", cocktails_path, class: "btn btn-danger" %>
<% end %>
</div>
</div>